@model IEnumerable<AP5PW_Helpdesk.ViewModels.UserVM>
@{
    ViewData["Title"] = "Users";
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Users</h5>
        <button type="button"
                class="btn btn-gradient-blue btn-sm js-open-modal"
                data-url="@Url.Action("Create", "Users")"
                data-title="Create new user">
            + Create user
        </button>
    </div>

    <div class="table-responsive">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No users yet. Click “Create user”.</div>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Lastname</th>
                        <th>Company</th>
                        <th>Role</th>
                        <th class="text-end" style="width:1%;white-space:nowrap;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@u.UserName</td>
                            <td>@u.LastName</td>
                            <td>@u.CompanyName</td>
                            <td>@u.RoleName</td>
                            <td class="text-end align-middle">
                                <div class="d-flex justify-content-end gap-2">
                                    <button type="button"
                                            class="btn btn-sm btn-gradient-gray js-open-modal"
                                            data-url="@Url.Action("Details", "Users", new { id = u.Id })"
                                            data-title="User details">
                                        Details
                                    </button>

                                    <button type="button"
                                            class="btn btn-sm btn-gradient-blue js-open-modal"
                                            data-url="@Url.Action("Edit", "Users", new { id = u.Id })"
                                            data-title="Edit user">
                                        Edit
                                    </button>

                                    <form asp-action="Delete" asp-route-id="@u.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-gradient-red"
                                                onclick="return confirm('Delete this user?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- Univerzální modal -->
<div class="modal fade" id="appModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="appModalLabel">Loading…</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-gradient-gray" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-gradient-blue d-none" id="appModalSaveBtn">Save</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        /* === Kompaktnější tabulka === */
        .table > :not(caption) > * > * {
            padding: 0.4rem 0.6rem; /* menší výška řádku */
        }

        /* Hover efekt na řádek */
        .table-hover tbody tr:hover {
            background: rgba(102, 16, 242, 0.07);
            transition: background-color 0.2s ease-in-out;
        }

        /* Gradient tlačítka */
        .btn-gradient-blue {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            border: none;
            color: #fff !important;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-gray {
            background: linear-gradient(135deg, #6c757d, #495057);
            border: none;
            color: #fff !important;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-red {
            background: linear-gradient(135deg, #dc3545, #ff4f70);
            border: none;
            color: #fff !important;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

            .btn-gradient-blue:hover,
            .btn-gradient-gray:hover,
            .btn-gradient-red:hover {
                transform: translateY(-1px) scale(1.05);
                box-shadow: 0 0 12px rgba(102,16,242,0.4);
                filter: brightness(1.15);
            }

        /* Zarovnání tlačítek vpravo */
        td.text-end .btn {
            min-width: 75px;
        }
    </style>

    <script>
        (function () {
            const modalEl = document.getElementById('appModal');
            const modal = new bootstrap.Modal(modalEl);
            const modalTitle = modalEl.querySelector('.modal-title');
            const modalBody  = modalEl.querySelector('.modal-body');
            const saveBtn    = document.getElementById('appModalSaveBtn');

            document.querySelectorAll('.js-open-modal').forEach(btn => {
                btn.addEventListener('click', async () => {
                    modalTitle.textContent = btn.dataset.title || 'Details';
                    modalBody.innerHTML = '<div class="text-center py-4">Loading…</div>';
                    saveBtn.classList.add('d-none');

                    try {
                        const res = await fetch(btn.dataset.url, { headers: { 'X-Requested-With': 'XMLHttpRequest' } });
                        const html = await res.text();
                        modalBody.innerHTML = html;

                        const form = modalBody.querySelector('form');
                        if (form) {
                            saveBtn.classList.remove('d-none');
                            saveBtn.onclick = () => form.submit();
                        }
                    } catch {
                        modalBody.innerHTML = '<div class="alert alert-danger">Failed to load content.</div>';
                        saveBtn.classList.add('d-none');
                    }

                    modal.show();
                });
            });
        })();
    </script>
}
