@model AP5PW_Helpdesk.ViewModels.UserVM
@{
    ViewData["Title"] = "User details";
    var header = Context?.Request?.Headers?["X-Requested-With"].ToString();
    var isAjax = header == "XMLHttpRequest";
    if (isAjax) { Layout = null; }
}

@if (isAjax)
{
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-1" id="formModalEdit">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Company</label>
                <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.CompanyList"></select>
                <span asp-validation-for="CompanyId" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label">Role</label>
                <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleList"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>
    </form>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header">
            <h2 class="h5 mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-1" id="formEdit">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="UserName" class="form-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Company</label>
                        <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.CompanyList"></select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Role</label>
                        <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleList"></select>
                        <span asp-validation-for="RoleId" class="text-danger"></span>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer bg-transparent">
            <button form="formEdit" type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
        </div>
    </div>
}
