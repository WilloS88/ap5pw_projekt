@model AP5PW_Helpdesk.ViewModels.UserVM
@{
    ViewData["Title"] = "Edit user";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Role</label>
        <select asp-for="RoleId" class="form-select"
                asp-items="@(new SelectList((IEnumerable<AP5PW_Helpdesk.Entities.Role>)ViewBag.Roles, "Id", "Name"))">
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>