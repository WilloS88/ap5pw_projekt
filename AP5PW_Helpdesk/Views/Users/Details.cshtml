@model AP5PW_Helpdesk.ViewModels.UserVM
@{
    ViewData["Title"] = "User details";
    var header = Context?.Request?.Headers?["X-Requested-With"].ToString();
    var isAjax = header == "XMLHttpRequest";
    if (isAjax) { Layout = null; }
}

@if (isAjax)
{
    <div>
        <dl class="row mb-0">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9">@Model.Id</dd>
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">@Model.UserName</dd>
            <dt class="col-sm-3">Lastname</dt>
            <dd class="col-sm-9">@Model.LastName</dd>
            <dt class="col-sm-3">Company</dt>
            <dd class="col-sm-9">@Model.CompanyName</dd>
            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.RoleName</dd>
        </dl>
    </div>
}
else
{
    <div class="card shadow-sm">
        <div class="card-header">
            <h2 class="h5 mb-0">@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9">@Model.UserName</dd>
                <dt class="col-sm-3">Lastname</dt>
                <dd class="col-sm-9">@Model.LastName</dd>
                <dt class="col-sm-3">Company</dt>
                <dd class="col-sm-9">@Model.CompanyName</dd>
                <dt class="col-sm-3">Role</dt>
                <dd class="col-sm-9">@Model.RoleName</dd>
            </dl>
        </div>
        <div class="card-footer bg-transparent">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back</a>
        </div>
    </div>
}
