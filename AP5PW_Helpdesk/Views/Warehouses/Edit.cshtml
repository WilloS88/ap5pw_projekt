@model AP5PW_Helpdesk.ViewModels.WarehouseVM
@{
    ViewData["Title"] = "Edit warehouse";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" asp-route-id="@Model.Id" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Company</label>
        <select asp-for="CompanyId" class="form-select" asp-items="ViewBag.CompanyList"></select>
        <span asp-validation-for="CompanyId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
</form>
