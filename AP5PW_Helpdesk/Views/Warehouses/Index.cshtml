@model IEnumerable<AP5PW_Helpdesk.ViewModels.WarehouseVM>
@{
    ViewData["Title"] = "Warehouses";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-primary">Add warehouse</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No warehouses yet. Click "Add warehouse".</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Company</th>
                    <th style="width:1%;white-space:nowrap;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var w in Model)
                {
                    <tr>
                        <td>@w.Name</td>
                        <td>@w.CompanyName</td>
                        <td class="text-end">
                            <a asp-action="Details" asp-route-id="@w.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Edit" asp-route-id="@w.Id" class="btn btn-sm btn-outline-primary ms-1">Edit</a>
                            <form asp-action="Delete" asp-route-id="@w.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger ms-1"
                                        onclick="return confirm('Delete this warehouse?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
