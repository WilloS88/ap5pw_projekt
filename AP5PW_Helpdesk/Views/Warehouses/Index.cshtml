@model IEnumerable<AP5PW_Helpdesk.ViewModels.WarehouseVM>

@{
    ViewData["Title"] = "Warehouses";
}
<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@ViewData["Title"]</h5>
        <a asp-action="Create" class="btn btn-gradient-blue btn-sm">+ Create warehouse</a>
    </div>

    <div class="table-responsive d-none d-md-block">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No warehouses yet. Click “Create warehouse”.</div>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Company</th>
                        <th class="text-end" style="width:1%;white-space:nowrap;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var w in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@w.Name</td>
                            <td>@w.CompanyName</td>
                            <td class="text-end align-middle">
                                <div class="d-flex justify-content-end gap-2 flex-nowrap">
                                    <a asp-action="Details" asp-route-id="@w.Id" class="btn btn-sm btn-gradient-gray">Details</a>
                                    <a asp-action="Edit" asp-route-id="@w.Id" class="btn btn-sm btn-gradient-blue">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@w.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-gradient-red"
                                                onclick="return confirm('Delete this warehouse?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Mobile cards -->
    <div class="d-md-none">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No warehouses yet.</div>
            </div>
        }
        else
        {
            <div class="user-cards">
                @foreach (var w in Model)
                {
                    <div class="user-card mb-3 p-3 rounded shadow-sm">
                        <h6 class="fw-bold mb-1">@w.Name</h6>
                        <p class="small text-muted mb-1">@w.CompanyName</p>
                        <div class="d-flex gap-2 mt-2">
                            <a asp-action="Details" asp-route-id="@w.Id" class="btn btn-sm btn-gradient-gray flex-fill">Details</a>
                            <a asp-action="Edit" asp-route-id="@w.Id" class="btn btn-sm btn-gradient-blue flex-fill">Edit</a>
                            <form asp-action="Delete" asp-route-id="@w.Id" method="post" class="flex-fill">
                                <button type="submit" class="btn btn-sm btn-gradient-red w-100"
                                        onclick="return confirm('Delete this warehouse?');">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        .table > :not(caption) > * > * {
            padding: 0.4rem 0.6rem;
        }

        .table-hover tbody tr:hover {
            background: rgba(102,16,242,0.07);
        }

        .btn-gradient-blue {
            background: linear-gradient(135deg,#0d6efd,#6610f2);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all .25s;
        }

        .btn-gradient-gray {
            background: linear-gradient(135deg,#6c757d,#495057);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all .25s;
        }

        .btn-gradient-red {
            background: linear-gradient(135deg,#dc3545,#ff4f70);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all .25s;
        }

            .btn-gradient-blue:hover, .btn-gradient-gray:hover, .btn-gradient-red:hover {
                transform: translateY(-1px) scale(1.05);
                box-shadow: 0 0 12px rgba(102,16,242,.4);
                filter: brightness(1.15);
            }

        .user-card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
        }
    </style>
}
