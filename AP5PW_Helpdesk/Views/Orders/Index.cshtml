@model IEnumerable<AP5PW_Helpdesk.ViewModels.Order.OrderVM>
@{
    ViewData["Title"] = "Orders";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Orders</h5>
        <a asp-action="Create" class="btn btn-gradient-blue btn-sm">+ Create order</a>
    </div>

    <!-- === Desktop Table === -->
    <div class="table-responsive d-none d-md-block">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No orders yet. Click “Create order”.</div>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Company</th>
                        <th>User</th>
                        <th>Expedition</th>
                        <th>Type</th>
                        <th class="text-end" style="width:1%;white-space:nowrap;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr>
                            <td>@o.CompanyName</td>
                            <td>@o.UserName</td>
                            <td>@(o.ExpeditionDate?.ToString("yyyy-MM-dd"))</td>
                            <td>
                                @if (o.IsBuyOrder)
                                {
                                    <span class="badge bg-success">BUY</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">SELL</span>
                                }
                            </td>
                            <td class="text-end align-middle">
                                <div class="d-flex justify-content-end gap-2 flex-nowrap">
                                    <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-gradient-gray">Details</a>
                                    <a asp-action="Edit" asp-route-id="@o.Id" class="btn btn-sm btn-gradient-blue">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@o.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-gradient-red"
                                                onclick="return confirm('Delete this order?');">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- === Mobile Cards === -->
    <div class="d-md-none">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No orders yet. Click “Create order”.</div>
            </div>
        }
        else
        {
            <div class="user-cards">
                @foreach (var o in Model)
                {
                    <div class="user-card mb-3 p-3 rounded shadow-sm">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <p class="mb-1 small text-muted">@o.CompanyName</p>
                                <p class="mb-1 small">@o.UserName</p>
                                <span class="badge @(o.IsBuyOrder ? "bg-success" : "bg-warning text-dark")">
                                    @(o.IsBuyOrder ? "BUY" : "SELL")
                                </span>
                            </div>
                            <div class="text-end d-flex flex-column gap-2 ms-3">
                                <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-gradient-gray">Details</a>
                                <a asp-action="Edit" asp-route-id="@o.Id" class="btn btn-sm btn-gradient-blue">Edit</a>
                                <form asp-action="Delete" asp-route-id="@o.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-gradient-red"
                                            onclick="return confirm('Delete this order?');">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        /* === Desktop (Table) === */
        @@media (min-width: 768px) {
            .table > :not(caption) > * > * {
                padding: 0.35rem 0.5rem; /* menší výška řádku */
                vertical-align: middle;
            }

            .table-hover tbody tr:hover {
                background: rgba(102, 16, 242, 0.07);
                transition: background-color 0.2s ease-in-out;
            }

            td.text-end .btn {
                min-width: 80px;
                font-size: 0.85rem;
                padding: 0.3rem 0.6rem;
            }

            td.text-end .d-flex {
                flex-wrap: nowrap;
                gap: 0.4rem;
            }
        }

        /* === Mobile Cards === */
        .user-card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
        }

        .btn-gradient-blue {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-gray {
            background: linear-gradient(135deg, #6c757d, #495057);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-red {
            background: linear-gradient(135deg, #dc3545, #ff4f70);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-blue:hover,
        .btn-gradient-gray:hover,
        .btn-gradient-red:hover {
            transform: translateY(-1px) scale(1.05);
            box-shadow: 0 0 12px rgba(102,16,242,0.4);
            filter: brightness(1.15);
        }
    </style>
}
