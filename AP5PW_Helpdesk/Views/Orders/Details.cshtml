@model AP5PW_Helpdesk.ViewModels.Order.OrderEditVM
@{
    ViewData["Title"] = "Order details";
}
<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-3">Company</dt>
    <dd class="col-sm-9">@Model.CompanyName</dd>

    <dt class="col-sm-3">User</dt>
    <dd class="col-sm-9">@Model.UserName</dd>

    <dt class="col-sm-3">Expedition</dt>
    <dd class="col-sm-9">@Model.ExpeditionDate?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-3">Type</dt>
    <dd class="col-sm-9">@((Model.IsBuyOrder) ? "BUY" : "SELL")</dd>
</dl>

<h4>Items</h4>
@if (Model.Items == null || !Model.Items.Any())
{
    <div class="alert alert-warning">This order has no items.</div>
}
else
{
    <table class="table table-sm table-striped align-middle">
        <thead>
            <tr>
                <th>Good</th>
                <th class="text-end">Qty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.GoodName</td>
                    <td class="text-end">@it.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Back</a>
