@model AP5PW_Helpdesk.ViewModels.CompanyVM

@{
    ViewData["Title"] = "Edit company";
}

<div class="card shadow-sm p-4">
    <h4 class="mb-3">Edit company</h4>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Street" class="form-label"></label>
            <input asp-for="Street" class="form-control" />
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Postcode" class="form-label"></label>
            <input asp-for="Postcode" class="form-control" />
            <span asp-validation-for="Postcode" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-gradient-blue">Save</button>
            <a asp-action="Index" class="btn btn-gradient-gray">Cancel</a>
        </div>
    </form>
</div>
