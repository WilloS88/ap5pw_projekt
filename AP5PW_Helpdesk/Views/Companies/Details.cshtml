@model AP5PW_Helpdesk.ViewModels.CompanyVM

@{
    ViewData["Title"] = "Company details";
}

<div class="card shadow-sm p-4">
    <h4 class="mb-3">@Model.Name</h4>

    <dl class="row mb-0">
        <dt class="col-sm-3">Street</dt>
        <dd class="col-sm-9">@Model.Street</dd>

        <dt class="col-sm-3">City</dt>
        <dd class="col-sm-9">@Model.City</dd>

        <dt class="col-sm-3">Postcode</dt>
        <dd class="col-sm-9">@Model.Postcode</dd>
    </dl>

    <div class="mt-4 d-flex justify-content-end gap-2">
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient-blue">Edit</a>
        }
         <a asp-action="Index" class="btn btn-gradient-gray mb-2 me-2">Back</a>
    </div>
</div>
