@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "AP5PW_Helpdesk";
}
<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- JetBrains Mono -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Google Material Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,600,1,0" rel="stylesheet" />

    <style>
        :root {
            --brand-from: #0d6efd;
            --brand-to: #6610f2;
        }

        html, body {
            height: 100%;
            margin: 0;
            background: radial-gradient(1200px 800px at 20% -10%, rgba(13,110,253,.15), transparent 60%), radial-gradient(1200px 800px at 120% 10%, rgba(102,16,242,.15), transparent 60%), #0b0f14;
            color: #e2e8f0;
            font-family: "JetBrains Mono", monospace;
        }

        body {
            display: flex;
            flex-direction: row;
            min-height: 100vh;
        }

        /* === Sidebar (desktop) === */
        .sidebar {
            width: 240px;
            background: linear-gradient(180deg, var(--brand-from), var(--brand-to));
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            padding: 1.2rem 0;
            box-shadow: 4px 0 16px rgba(0,0,0,.4);
            z-index: 1030;
        }

            .sidebar .brand {
                font-size: 1.2rem;
                font-weight: 700;
                color: #fff;
                padding: 0 1.5rem;
                display: flex;
                align-items: center;
                gap: .6rem;
                margin-bottom: 1.5rem;
            }

            .sidebar .nav-link {
                color: rgba(255,255,255,0.9);
                display: flex;
                align-items: center;
                gap: .75rem;
                padding: .7rem 1.5rem;
                font-weight: 500;
                transition: all 0.25s ease;
                text-decoration: none;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255,255,255,0.15);
                    color: #fff;
                    transform: translateX(3px);
                }

            .sidebar .material-symbols-rounded {
                font-size: 22px;
                vertical-align: middle;
            }

        /* === Footer inside sidebar === */
        .sidebar-footer {
            color: rgba(255,255,255,0.7);
            font-size: 0.8rem;
            text-align: center;
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.15);
            margin-top: auto;
        }

        /* === Main content === */
        main {
            flex: 1;
            margin-left: 240px;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
            border-radius: .75rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.25);
        }

        .btn-gradient-blue {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            color: #fff;
            border: none;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

            .btn-gradient-blue:hover {
                transform: translateY(-1px) scale(1.05);
                box-shadow: 0 0 15px rgba(102,16,242,0.4);
                filter: brightness(1.15);
            }

        /* === Mobile header (shown under lg) === */
        .mobile-header {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(90deg, var(--brand-from), var(--brand-to));
            color: #fff;
            padding: .75rem 1rem;
            z-index: 1040;
            box-shadow: 0 2px 10px rgba(0,0,0,.4);
        }

            .mobile-header .brand {
                display: flex;
                align-items: center;
                gap: .5rem;
                font-weight: 700;
                font-size: 1.1rem;
            }

            .mobile-header button {
                background: none;
                border: none;
                color: white;
                font-size: 26px;
            }

        /* === Offcanvas (mobile sidebar) === */
        .offcanvas {
            background: linear-gradient(180deg, var(--brand-from), var(--brand-to));
            color: #fff;
        }

        /* === Responsive === */

        @@media (max-width: 992px) {
            .sidebar

        {
            display: none;
        }

        .mobile-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        main {
            margin-left: 0;
            padding-top: 80px;
        }

        }

        /* Optional: scrollbars */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background: rgba(255,255,255,0.2);
            border-radius: 10px;
        }

        /* === Global table optimizations === */
        .table > :not(caption) > * > * {
            padding: 0.4rem 0.6rem; /* menší výška řádku */
            vertical-align: middle;
        }

        .table-hover tbody tr:hover {
            background: rgba(102, 16, 242, 0.07);
            transition: background-color 0.2s ease-in-out;
        }

        /* Buttons vedle sebe (desktop) */
        td.text-end .btn {
            min-width: 80px;
            font-size: 0.85rem;
            padding: 0.3rem 0.6rem;
            border-radius: 0.4rem;
        }

        @@media (min-width: 769px) {
            .users-table td.text-end

        {
            white-space: nowrap;
        }

        .users-table td.text-end .btn {
            display: inline-block;
            margin-left: 0.3rem;
        }

        }

        /* Mobilní zobrazení – kartičky */
        @@media (max-width: 768px) {
            .users-table thead

        {
            display: none;
        }

        .users-table tbody {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .users-table tr {
            display: block;
            background: #0f141b;
            border-radius: 0.6rem;
            padding: 0.75rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
        }

        .users-table td {
            display: flex;
            justify-content: space-between;
            padding: 0.35rem 0.4rem;
            border: none;
            font-size: 0.9rem;
        }

            .users-table td::before {
                content: attr(data-label);
                font-weight: 600;
                color: #a0aec0;
            }

            .users-table td.text-end {
                justify-content: flex-end;
            }

                .users-table td.text-end .btn {
                    font-size: 0.8rem;
                    padding: 0.25rem 0.5rem;
                    min-width: auto;
                }

        }

    </style>
</head>
<body>
    <!-- Mobile header -->
    <div class="mobile-header">
        <div class="brand">
            <h3 class="fw-bold">Helpdesk</h3>
        </div>
        <button type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu" aria-label="Open menu">
            <span class="material-symbols-rounded">menu</span>
        </button>
    </div>

    <!-- Sidebar (desktop) -->
    <nav class="sidebar d-none d-lg-flex flex-column justify-content-between">
        <div>
            <div class="brand">
                <h3 class="fw-bold">Helpdesk</h3>
            </div>
            <ul class="nav flex-column">
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="https://localhost:7227/">
                        <span class="material-symbols-rounded">home</span> Home
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" href="https://localhost:7227/Users">
                        <span class="material-symbols-rounded">group</span> Users
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")" href="https://localhost:7227/Orders">
                        <span class="material-symbols-rounded">shopping_cart</span> Orders
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Goods" ? "active" : "")" href="https://localhost:7227/Goods">
                        <span class="material-symbols-rounded">inventory_2</span> Goods
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Companies" ? "active" : "")" href="https://localhost:7227/Companies">
                        <span class="material-symbols-rounded">apartment</span> Companies
                    </a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Warehouses" ? "active" : "")" href="https://localhost:7227/Warehouses">
                        <span class="material-symbols-rounded">warehouse</span> Warehouses
                    </a>
                </li>
            </ul>
        </div>
        <div class="sidebar-footer">
            © @DateTime.Now.Year<br />AP5PW_Helpdesk
        </div>
    </nav>

    <!-- Offcanvas menu (mobile) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="mobileMenuLabel">Helpdesk</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav flex-column">
                <li><a class="nav-link text-white" href="https://localhost:7227/">Home</a></li>
                <li><a class="nav-link text-white" href="https://localhost:7227/Users">Users</a></li>
                <li><a class="nav-link text-white" href="https://localhost:7227/Orders">Orders</a></li>
                <li><a class="nav-link text-white" href="https://localhost:7227/Goods">Goods</a></li>
                <li><a class="nav-link text-white" href="https://localhost:7227/Companies">Companies</a></li>
                <li><a class="nav-link text-white" href="https://localhost:7227/Warehouses">Warehouses</a></li>
            </ul>
            <div class="mt-4 text-center small opacity-75">
                © @DateTime.Now.Year – AP5PW_Helpdesk
            </div>
        </div>
    </div>

    <!-- Main content -->
    <main>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
