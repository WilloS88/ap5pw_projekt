@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "AP5PW_Helpdesk";
}
<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- JetBrains Mono -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --brand-from: #0d6efd;
            --brand-to: #6610f2;
        }

        body {
            font-family: "JetBrains Mono", ui-monospace, Menlo, Consolas, monospace;
            background: radial-gradient(1200px 800px at 20% -10%, rgba(13,110,253,.15), transparent 60%), radial-gradient(1200px 800px at 120% 10%, rgba(102,16,242,.15), transparent 60%), #0b0f14;
            color: #e2e8f0;
        }

        .navbar {
            background: linear-gradient(90deg, var(--brand-from), var(--brand-to));
            box-shadow: 0 2px 16px rgba(0,0,0,.35);
        }

        .card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
            border-radius: .75rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.25);
        }

        .card-header {
            background: linear-gradient(90deg, rgba(13,110,253,.15), rgba(102,16,242,.15));
            border-bottom: 1px solid rgba(255,255,255,.08);
        }

        .table thead th {
            background: #0f141b;
            border-bottom-color: rgba(255,255,255,.08) !important;
        }

        footer {
            background: #0f141b;
            border-top: 1px solid rgba(255,255,255,.06);
        }

        /* === Gradient button styles === */
        .btn-gradient {
            color: #fff !important;
            border: none;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
            min-width: 90px;
            letter-spacing: 0.2px;
        }

        .btn-gradient-gray {
            background: linear-gradient(135deg, #6c757d, #495057);
        }

        .btn-gradient-blue {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
        }

        .btn-gradient-red {
            background: linear-gradient(135deg, #dc3545, #ff4f70);
        }

        .btn-gradient:hover {
            transform: translateY(-1px) scale(1.05);
            box-shadow: 0 0 15px rgba(102,16,242,0.4);
            filter: brightness(1.15);
        }

        .modal-content {
            background: #0e1319;
            border: 1px solid rgba(255,255,255,.08);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Helpdesk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"
                    aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="nav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
                    </li>
                    @*
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a>
                    </li>
                    *@
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Goods" asp-action="Index">Goods</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Companies" asp-action="Index">Companies</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Warehouses" asp-action="Index">Warehouses</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="py-3 text-center text-muted small">
        © @DateTime.Now.Year – AP5PW_Helpdesk
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
