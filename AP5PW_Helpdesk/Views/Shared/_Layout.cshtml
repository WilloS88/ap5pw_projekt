@using System.Security.Claims

@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "AP5PW_Helpdesk";
}
<!doctype html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- JetBrains Mono -->
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600;700&display=swap" rel="stylesheet" />

    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,600,1,0" rel="stylesheet" />

    <style>
        :root {
            --brand-from: #0d6efd;
            --brand-to: #6610f2;
        }

        html, body {
            height: 100%;
            margin: 0;
            background: radial-gradient(1200px 800px at 20% -10%, rgba(13,110,253,.15), transparent 60%), radial-gradient(1200px 800px at 120% 10%, rgba(102,16,242,.15), transparent 60%), #0b0f14;
            color: #e2e8f0;
            font-family: "JetBrains Mono", monospace;
        }

        body {
            display: flex;
            flex-direction: row;
            min-height: 100vh;
        }

        /* === Sidebar === */
        .sidebar {
            width: 260px;
            background: rgba(15, 20, 30, 0.35);
            backdrop-filter: blur(18px) saturate(180%);
            -webkit-backdrop-filter: blur(18px) saturate(180%);
            border-right: 1px solid rgba(255, 255, 255, 0.08);
            box-shadow: 6px 0 20px rgba(0,0,0,.45);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            padding: 1.5rem 0;
            z-index: 1030;
            animation: glassSlide 0.8s ease both;
        }

        @@keyframes glassSlide {
            from

        {
            transform: translateX(-40px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }

        }

        .sidebar::before {
            content: "";
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, rgba(13,110,253,.3), rgba(102,16,242,.3));
            opacity: 0.25;
            z-index: -1;
        }

        .brand {
            font-size: 1.3rem;
            font-weight: 700;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: .7rem;
            margin-bottom: 1.8rem;
            text-shadow: 0 0 8px rgba(102,16,242,0.6);
        }

        .nav-link {
            color: rgba(255,255,255,0.9);
            display: flex;
            align-items: center;
            gap: .75rem;
            padding: .75rem 1.6rem;
            font-weight: 500;
            transition: all 0.25s ease;
            text-decoration: none;
            border-radius: .6rem;
            margin: 0 .8rem;
        }

            .nav-link:hover,
            .nav-link.active {
                background: rgba(255,255,255,0.18);
                color: #fff;
                transform: translateX(4px);
                box-shadow: 0 0 10px rgba(102,16,242,0.3);
            }

        .material-symbols-rounded {
            font-size: 22px;
        }

        /* === User Card === */
        .user-card {
            background: rgba(255,255,255,0.08);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 1rem;
            padding: 1rem 1.2rem;
            margin: 0 1.2rem 1.2rem 1.2rem;
            box-shadow: inset 0 0 20px rgba(255,255,255,0.05), 0 0 25px rgba(102,16,242,0.25);
            backdrop-filter: blur(20px) saturate(150%);
            transition: all 0.3s ease;
        }

        .username {
            font-weight: 700;
            font-size: 1rem;
            color: #fff;
        }

        .btn-logout {
            background: linear-gradient(135deg, #dc3545, #ff4f70);
            color: #fff;
            border: none;
            border-radius: .6rem;
            padding: .65rem 1rem;
            font-size: 0.95rem;
            font-weight: 700;
            text-transform: uppercase;
            transition: all 0.25s ease-in-out;
            width: 100%;
        }

            .btn-logout:hover {
                transform: scale(1.03);
                box-shadow: 0 0 15px rgba(255,79,112,0.6);
                filter: brightness(1.1);
            }

        .sidebar-footer {
            color: rgba(255,255,255,0.6);
            font-size: 0.8rem;
            text-align: center;
            padding: .5rem 1rem;
            border-top: 1px solid rgba(255,255,255,0.08);
        }

        /* === Main === */
        main {
            flex: 1;
            margin-left: 260px;
            padding: 2rem;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        /* === Mobile header === */
        .mobile-header {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(90deg, var(--brand-from), var(--brand-to));
            color: #fff;
            padding: .75rem 1rem;
            z-index: 1040;
            box-shadow: 0 2px 10px rgba(0,0,0,.4);
        }

            .mobile-header .brand {
                font-weight: 700;
                font-size: 1.1rem;
            }

            .mobile-header button {
                background: none;
                border: none;
                color: white;
                font-size: 26px;
            }

        @@media (max-width: 992px) {
            .sidebar

        {
            display: none;
        }

        .mobile-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        main {
            margin-left: 0;
            padding-top: 80px;
        }

        }
    </style>
</head>
<body>
    <!-- Mobile header -->
    <div class="mobile-header">
        <div class="brand">Helpdesk</div>
        @if (User.Identity?.IsAuthenticated == true)
        {
            <button type="button" data-bs-toggle="offcanvas" data-bs-target="#sideMenu" aria-label="Open menu">
                <span class="material-symbols-rounded">menu</span>
            </button>
        }
    </div>

    <!-- Sidebar / Offcanvas -->
    <nav id="sideMenu" class="sidebar offcanvas-lg offcanvas-start d-flex flex-column"
         tabindex="-1" aria-labelledby="sideMenuLabel" data-bs-scroll="true" data-bs-backdrop="false">
        <div class="offcanvas-header d-lg-none">
            <h5 class="offcanvas-title" id="sideMenuLabel">Helpdesk</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>

        <div class="offcanvas-body d-flex flex-column p-0 h-100">
            <div class="brand">
                <span class="material-symbols-rounded fs-2">support_agent</span>
                <span>Helpdesk</span>
            </div>

            <ul class="nav flex-column flex-grow-1 px-2">
                <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/"> <span class="material-symbols-rounded">home</span> Home</a></li>
                @if (User.IsInRole("admin"))
                {
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")" href="/Users"><span class="material-symbols-rounded">group</span> Users</a></li>
                }
                <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")" href="/Orders"><span class="material-symbols-rounded">shopping_cart</span> Orders</a></li>
                <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Goods" ? "active" : "")" href="/Goods"><span class="material-symbols-rounded">inventory_2</span> Goods</a></li>
                <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Companies" ? "active" : "")" href="/Companies"><span class="material-symbols-rounded">apartment</span> Companies</a></li>
                <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Warehouses" ? "active" : "")" href="/Warehouses"><span class="material-symbols-rounded">warehouse</span> Warehouses</a></li>
            </ul>

            <div class="mt-auto w-100">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value ?? "user";
                    <div class="user-card">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <div class="username">@User.Identity.Name</div>
                                <small>@role</small>
                            </div>
                            <span class="material-symbols-rounded">logout</span>
                        </div>
                        <form asp-controller="Auth" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-logout w-100">Sign out</button>
                        </form>
                    </div>
                }

                <div class="sidebar-footer">
                    © @DateTime.Now.Year<br />AP5PW_Helpdesk
                </div>
            </div>
        </div>
    </nav>

    <!-- Main -->
    <main>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
