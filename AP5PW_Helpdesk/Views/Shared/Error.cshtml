@using AP5PW_Helpdesk.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h1 class="h3 text-danger mb-2">Error</h1>
        <p class="text-danger">An error occurred while processing your request.</p>

        @if (Model?.ShowRequestId == true)
        {
            <p class="mb-0">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
    <div class="card-footer bg-white">
        <h6 class="mb-1">Development Mode</h6>
        <p class="mb-0">
            Enable <strong>ASPNETCORE_ENVIRONMENT=Development</strong> for detailed errors (not for production).
        </p>
    </div>
</div>
