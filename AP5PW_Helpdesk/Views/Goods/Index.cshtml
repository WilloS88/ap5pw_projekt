@model IEnumerable<AP5PW_Helpdesk.ViewModels.GoodVM>
@{
    ViewData["Title"] = "Goods";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Goods</h5>
        <a asp-action="Create" class="btn btn-gradient-blue btn-sm">+ Create good</a>
    </div>

    <!-- Desktop tabulka -->
    <div class="table-responsive d-none d-md-block">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No goods yet. Click “Create good”.</div>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Product number</th>
                        <th class="text-end" style="width:1%;white-space:nowrap;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var g in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@g.Name</td>
                            <td>@g.Price.ToString("C")</td>
                            <td>@g.ProductNum</td>
                            <td class="text-end align-middle">
                                <div class="d-flex justify-content-end gap-2 flex-nowrap">
                                    <a asp-action="Details" asp-route-id="@g.Id" class="btn btn-sm btn-gradient-gray">Details</a>
                                    <a asp-action="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-gradient-blue">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@g.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-gradient-red" onclick="return confirm('Delete this good?');">Delete</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Mobilní verze -->
    <div class="d-md-none">
        @if (Model == null || !Model.Any())
        {
            <div class="p-4">
                <div class="alert alert-info mb-0">No goods yet. Click “Create good”.</div>
            </div>
        }
        else
        {
            <div class="good-cards">
                @foreach (var g in Model)
                {
                    <div class="good-card mb-3 p-3 rounded shadow-sm">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="fw-bold mb-1">@g.Name</h6>
                                <p class="mb-1 small text-muted">@g.ProductNum</p>
                                <p class="mb-1 small">@g.Price.ToString("C")</p>
                            </div>
                            <div class="text-end d-flex flex-column gap-2 ms-3">
                                <a asp-action="Details" asp-route-id="@g.Id" class="btn btn-sm btn-gradient-gray">Details</a>
                                <a asp-action="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-gradient-blue">Edit</a>
                                <form asp-action="Delete" asp-route-id="@g.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-gradient-red" onclick="return confirm('Delete this good?');">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <style>
        /* === Desktop === */
        @@media (min-width: 768px) {
            .table > :not(caption) > * > * {
                padding: 0.35rem 0.5rem;
                vertical-align: middle;
            }

            .table-hover tbody tr:hover {
                background: rgba(102, 16, 242, 0.07);
                transition: background-color 0.2s ease-in-out;
            }

            td.text-end .btn {
                min-width: 80px;
                font-size: 0.85rem;
                padding: 0.3rem 0.6rem;
            }

            td.text-end .d-flex {
                flex-wrap: nowrap;
                gap: 0.4rem;
            }
        }

        /* === Mobile cards === */
        .good-card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
        }

        .btn-gradient-blue {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-gray {
            background: linear-gradient(135deg, #6c757d, #495057);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

        .btn-gradient-red {
            background: linear-gradient(135deg, #dc3545, #ff4f70);
            border: none;
            color: #fff;
            font-weight: 600;
            transition: all 0.25s ease-in-out;
        }

            .btn-gradient-blue:hover,
            .btn-gradient-gray:hover,
            .btn-gradient-red:hover {
                transform: translateY(-1px) scale(1.05);
                box-shadow: 0 0 12px rgba(102,16,242,0.4);
                filter: brightness(1.15);
            }
    </style>
}
