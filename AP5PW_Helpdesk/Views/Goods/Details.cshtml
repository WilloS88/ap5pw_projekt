@model AP5PW_Helpdesk.ViewModels.GoodVM
@{
    ViewData["Title"] = "Good details";
}

<div class="card shadow-sm p-4">
    <h4 class="mb-4 fw-bold">Good details</h4>

    <dl class="row mb-0">
        <dt class="col-sm-3 text-muted">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3 text-muted">Price</dt>
        <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-3 text-muted">Product number</dt>
        <dd class="col-sm-9">@Model.ProductNum</dd>
    </dl>

    <div class="mt-4 d-flex justify-content-end gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient-blue">Edit</a>
        <a asp-action="Index" class="btn btn-gradient-gray">Back</a>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
            border-radius: .75rem;
        }

        dt {
            color: rgba(255,255,255,0.6);
        }

        .btn-gradient-blue {
            background: linear-gradient(135deg, #0d6efd, #6610f2);
            color: #fff;
            font-weight: 600;
            border: none;
        }

        .btn-gradient-gray {
            background: linear-gradient(135deg, #6c757d, #495057);
            color: #fff;
            font-weight: 600;
            border: none;
        }

            .btn-gradient-blue:hover, .btn-gradient-gray:hover {
                transform: translateY(-1px) scale(1.03);
                filter: brightness(1.1);
            }
    </style>
}
