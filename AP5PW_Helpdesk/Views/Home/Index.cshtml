@{
    ViewData["Title"] = "Dashboard";
}

<!-- Full Material Symbols icon set -->
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<section class="dashboard-section py-5">
    <div class="container-fluid px-4">
        <div class="row align-items-center g-5">
            <!-- LEFT SIDE -->
            <div class="col-lg-6">
                <h2 class="fw-bold mb-4 text-gradient">System Overview</h2>

                <div class="row g-4">
                    <div class="col-12 col-sm-6">
                        <div class="info-card p-4 h-100">
                            <span class="material-symbols-outlined mb-2 text-primary fs-2">group</span>
                            <h5 class="fw-semibold mb-1">Users</h5>
                            <p class="text-secondary small mb-0">Manage all system users and their roles.</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="info-card p-4 h-100">
                            <span class="material-symbols-outlined mb-2 text-success fs-2">shopping_cart</span>
                            <h5 class="fw-semibold mb-1">Orders</h5>
                            <p class="text-secondary small mb-0">Track buying and selling operations easily.</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="info-card p-4 h-100">
                            <span class="material-symbols-outlined mb-2 text-warning fs-2">inventory_2</span>
                            <h5 class="fw-semibold mb-1">Goods</h5>
                            <p class="text-secondary small mb-0">Control stock levels and product details.</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="info-card p-4 h-100">
                            <span class="material-symbols-outlined mb-2 text-info fs-2">apartment</span>
                            <h5 class="fw-semibold mb-1">Companies</h5>
                            <p class="text-secondary small mb-0">Organize your clients and suppliers in one place.</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="info-card p-4 h-100">
                            <span class="material-symbols-outlined mb-2 text-light fs-2">warehouse</span>
                            <h5 class="fw-semibold mb-1">Warehouses</h5>
                            <p class="text-secondary small mb-0">Check capacity, stored goods, and assigned companies.</p>
                        </div>
                    </div>
                    <div class="col-12 col-sm-6">
                        <div class="info-card p-4 h-100">
                            <span class="material-symbols-outlined mb-2 text-success fs-2">database</span>
                            <h5 class="fw-semibold mb-1">System Status</h5>
                            <ul class="list-unstyled mb-0 small text-secondary">
                                <li><span class="text-success">●</span> Database: <strong>Connected</strong></li>
                                <li><span class="text-success">●</span> API: <strong>Running</strong></li>
                                <li><span class="text-success">●</span> UI: <strong>Operational</strong></li>
                                <li><span class="text-secondary">⟳</span> Updated: @DateTime.Now.ToString("dd MMM yyyy, HH:mm")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RIGHT SIDE -->
            <div class="col-lg-6 d-flex flex-column justify-content-center align-items-center text-center">
                <span class="material-symbols-outlined main-icon mb-3">bug_report</span>
                <h1 class="fw-bold text-gradient mb-2">Helpdesk</h1>
                <p class="text-secondary mb-0">AP5PW Semestral Project</p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <style>
        .dashboard-section {
            color: #e2e8f0;
            min-height: calc(100vh - 80px);
        }

        .text-gradient {
            background: linear-gradient(90deg, #0d6efd, #6610f2);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .info-card {
            background: #0f141b;
            border: 1px solid rgba(255,255,255,.08);
            border-radius: .75rem;
            box-shadow: 0 8px 24px rgba(0,0,0,.25);
            transition: all 0.3s ease;
        }

            .info-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 15px rgba(102,16,242,0.3);
            }

        .main-icon {
            font-size: 180px;
            color: #fff;
            filter: drop-shadow(0 0 25px rgba(13,110,253,0.7)) drop-shadow(0 0 35px rgba(102,16,242,0.6));
            animation: glow 3s ease-in-out infinite alternate;
            line-height: 1;
        }

        @@keyframes glow {
            from {
                filter: drop-shadow(0 0 10px rgba(13,110,253,0.4)) drop-shadow(0 0 20px rgba(102,16,242,0.3));
            }

            to {
                filter: drop-shadow(0 0 40px rgba(13,110,253,0.9)) drop-shadow(0 0 60px rgba(102,16,242,0.8));
            }
        }

        @@media (max-width: 992px) {
            .main-icon {
                font-size: 120px;
            }

            .dashboard-section {
                text-align: center;
            }
        }
    </style>
}
